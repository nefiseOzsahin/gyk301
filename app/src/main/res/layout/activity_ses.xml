<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SesActivity">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imageRecord"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@android:drawable/ic_btn_speak_now" />

    <LinearLayout
        android:layout_below="@+id/imageRecord"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/record_voice_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/mavi"
            android:gravity="center_vertical|center_horizontal"
            android:text="Kaydet"
            android:textColor="@color/beyaz" />



        <Button
            android:id="@+id/stop_voice_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/kirmizi"
            android:gravity="center_vertical|center_horizontal"
            android:text="Kayıt Stop"
            android:textColor="@color/beyaz" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/imageRecord"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
        android:id="@+id/play_voice_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:text="Çal"
        android:background="@color/yesil"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/beyaz" />
        <Button
            android:id="@+id/stop_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Dur"
            android:background="@color/mor"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/beyaz" />

    </LinearLayout>

</LinearLayout>